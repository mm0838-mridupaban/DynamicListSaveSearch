<mvc:View
    controllerName="frontend.controller.TablePage"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <Page
        id="page"
        showNavButton="true"
        navButtonPress="onNavButtonPress"
    >
        <content>
            <ScrollContainer
                vertical="true"
                horizontal="true"
            >
                <Button
                    text="Open View Settings Dialog"
                    press="handleOpenDialog"
                />
                <Table
                    id="idMyTable"
                    alternateRowColors="true"
                    inset="false"
                    growing="true"
                    growingScrollToLoad="true"
                />
            </ScrollContainer>
        </content>
    </Page>
</mvc:View>
